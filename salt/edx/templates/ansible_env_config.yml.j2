    password: "{{ MONGODB_MODULESTORE_PASSWORD }}"
    user: "{{ MONGODB_MODULESTORE_USER }}"
  CONTENTSTORE:
    ENGINE: "{{ MONGODB_CONTENTSTORE_ENGINE }}"
