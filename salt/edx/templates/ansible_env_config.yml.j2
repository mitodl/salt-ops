      <<: *edxapp_generic_default_docstore
      db: "{{ MONGODB_CONTENTSTORE_DB }}"
      password: "{{ MONGODB_CONTENTSTORE_PASSWORD }}"
      user: "{{ MONGODB_CONTENTSTORE_USER }}"
