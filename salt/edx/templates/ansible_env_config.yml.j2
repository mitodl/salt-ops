    default:
      ENGINE: "django.db.backends.mysql"
      HOST: "{{ MYSQL_HOST }}"
      NAME: "{{ MYSQL_DATABASE }}"
      PASSWORD: "{{ MYSQL_PASSWORD }}"
      PORT: "{{ MYSQL_PORT }}"
      USER: "{{ MYSQL_USER }}"
